{
    "private": true,
    "name": "create-magento-app",
    "scripts": {
        "eslint": "eslint ./build-packages --resolve-plugins-relative-to . --cache --no-error-on-unmatched-pattern --ext .js,.ts,.tsx",
        "cma": "create-magento-app runtime-packages/cma",
        "postinstall": "lerna bootstrap",
        "clean": "lerna clean --yes",
        "compile:lockfile": "node build-tasks/compile-lockfile.js"
    },
    "devDependencies": {
        "eslint": "^6.6.0",
        "fs-extra": "^9.0.1",
        "husky": "^4.3.0",
        "lerna": "^3.22.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run eslint"
        }
    },
    "eslintConfig": {
        "extends": "@scandipwa",
        "ignorePatterns": [
            "runtime-packages/cma/**",
            "**/node_modules/**"
        ]
    },
    "workspaces": [
        "build-packages/*",
        "runtime-packages/*"
    ]
}
