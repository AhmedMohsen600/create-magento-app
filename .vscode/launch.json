    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Attach Node Debugger",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Listen for Xdebug in Magento 2.4.3",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "cwd": "${workspaceRoot}/sample-packages/magento-2.4.3",
            "runtimeExecutable": "$HOME/.phpbrew/php/php-7.4.18/bin/php"
        }
    ]
}